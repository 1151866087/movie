.favorite-film-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
}

.favorite-film-cover {
    width: 300rpx;
    height: 420rpx;
    box-shadow: 10rpx 10rpx 30rpx rgba(0, 0, 0, .2);
}

.favorite-film-info {
    width: 360rpx;
}

.favorite-film-txt {
    margin-bottom: 15rpx;
    color: #666;
}

.favorite-film-title {
    font-size: 40rpx;
    color: #333;
}
