.tab-header {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    display: table;
    width: 750rpx;
    height: 80rpx;
    background-color: #f8f8f8;
    border-bottom: 4rpx solid #47a86c;
}

.tab-header-item {
    display: table-cell;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}