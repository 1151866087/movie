/* pages/search/search.wxss */
.search{
    width: 100%;
    height: 110rpx;
    display: flex;
    justify-content:space-between;
    align-items: center;
    padding: 0 30rpx;    
    border-top:1rpx solid #eee;   
    border-bottom: 1rpx solid #eee; 
    font-size: 26rpx;
    position: fixed;
    background: #fff;
    z-index: 10;
                                           
}
.search input{
    
    color: #999;
    width:  470rpx;
    border-radius:25rpx;
    height: 70rpx;
    background: #f7f7f7; 
    padding-left: 70rpx;
}
.search button{
    color: #999;
    font-size: 26rpx;
    width: 120rpx;
    height: 70rpx;
    border-radius:25rpx;
}
.icon{
    position: absolute;
    left: 50rpx
}
.icon1{
    position: absolute;
    right: 270rpx;
    z-index: 10;
}
.container{
    padding: 110rpx 30rpx;
}
.item{
    display: inline-flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
    padding-left: 20rpx;
}
.result{
    padding: 140rpx 35rpx 100rpx;
    background: #fff;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.content{
    margin: 30rpx 0 ;
}
.history,.hots{
    border-left: 10rpx solid #333;
    padding-left: 20rpx;
    display:block;
}
.empoty{
    text-align: center;
    padding-top: 150rpx;
}
.scroll-view{
    height: 1200rpx;
}
.container .content v-tag{
    margin-right: 20rpx;
    margin-bottom: 30rpx;
}